import random

def simple_ai():
    print("Hi! I'm your AI assistant. Ask me something or type 'quit' to exit.")
    while True:
        user_input = input("You: ").lower()
        
        if user_input == 'quit':
            print("AI: Bye! Talk later.")
            break
        
        if 'hello' in user_input or 'hi' in user_input:
            print("AI: Hey there!")
        elif 'how are you' in user_input:
            print("AI: I'm just code, but feeling great! You?")
        elif 'your name' in user_input:
            print("AI: I'm your simple AI assistant.")
        elif 'joke' in user_input:
            jokes = [
                "Why did the computer show up at work late? It had a hard drive!",
                "Why was the robot angry? Because someone kept pushing its buttons!",
                "Why do programmers prefer dark mode? Because light attracts bugs!"
            ]
            print("AI:", random.choice(jokes))
        else:
            print("AI: Sorry, I don't get that yet. Try asking something else!")

if __name__ == "__main__":
    simple_ai()